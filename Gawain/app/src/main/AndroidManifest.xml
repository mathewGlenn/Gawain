<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.glennappdev.gawain">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_gawain_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_gawain_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".About"
            android:exported="false" />
        <activity
            android:name=".Experiment"
            android:exported="false" />
        <activity
            android:name=".ManageSubjects"
            android:exported="false" />
        <activity
            android:name=".Settings"
            android:exported="false" />
        <activity
            android:name=".ViewTask"
            android:exported="false" />
        <activity
            android:name=".FinishedTasks"
            android:exported="false" />
        <activity
            android:name=".AddTask"
            android:exported="false" />
        <activity android:name=".MainActivity" />
        <activity
            android:name=".Splash"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver
            android:name=".AlarmReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="com.tomergoldst.timekeeper.intent_action.RECEIVE_ALARMS" />
            </intent-filter>
        </receiver>
    </application>

</manifest>